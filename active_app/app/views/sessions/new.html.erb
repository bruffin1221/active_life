<h1>Login</h1>
<%=flash[:alert] %>

<%= form_tag '/login' do%>
    
    <%=label_tag "Name" %><br>
    <%=text_field_tag :name%><br><br>
    
    <%=label_tag "Password" %><br>
    <%=password_field_tag :password %><br>
    <%= submit_tag "Login" %>
    <% end %>

    <%= link_to('Log in with Facebook', '/auth/facebook/') %><br>
    
    
    <%= link_to "Return to Welcome", root_path %>
   
   
   